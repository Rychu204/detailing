    <main>
        <h1 class="page-title">REZERWACJA TERMINU</h1>
        
        <div class="booking-container">
            <div class="calendar-section">
                <h2 class="section-title">Wybierz Datę i Godzinę</h2>
                
                <div class="calendar-header">
                    <button class="calendar-nav" id="prevMonth">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <div class="current-month" id="currentMonth">Styczeń 2024</div>
                    <button class="calendar-nav" id="nextMonth">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>

                <div class="calendar-grid" id="calendarGrid">
                    <!-- Kalendarz zostanie wygenerowany przez JavaScript -->
                </div>

                <div class="time-section">
                    <h3 style="margin-bottom: 1rem; color: #f1f5f9;">Dostępne godziny:</h3>
                    <div class="time-slots" id="timeSlots">
                        <!-- Godziny zostaną wygenerowane przez JavaScript -->
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h2 class="section-title">Dane Rezerwacji</h2>
                
                <form id="bookingForm">
                    <div class="form-group">
                        <label class="form-label">Imię i Nazwisko *</label>
                        <input type="text" class="form-input" id="name" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Telefon *</label>
                        <input type="tel" class="form-input" id="phone" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-input" id="email">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Marka i Model Samochodu *</label>
                        <input type="text" class="form-input" id="carModel" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Rodzaj Usługi *</label>
                        <select class="form-select" id="serviceType" required>
                            <option value="">Wybierz usługę</option>
                            <option value="Mycie Kompleksowe">Mycie Kompleksowe</option>
                            <option value="Tylko Wnętrze">Tylko Wnętrze</option>
                            <option value="Tylko Karoseria">Tylko Karoseria</option>
                            <option value="Pranie Tapicerki">Pranie Tapicerki</option>
                        </select>
                    </div>

                    <!-- Checkbox dla prania tapicerki -->
                    <div class="checkbox-group">
                        <input type="checkbox" class="checkbox-input" id="fabricCleaning">
                        <label class="checkbox-label" for="fabricCleaning">
                            Pranie tapicerki
                            <span class="price-badge">+100 zł</span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Wybrana Data</label>
                        <input type="text" class="form-input" id="selectedDate" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Wybrana Godzina</label>
                        <input type="text" class="form-input" id="selectedTime" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Dodatkowe Uwagi</label>
                        <textarea class="form-textarea" id="notes" placeholder="Dodatkowe informacje, uwagi..."></textarea>
                    </div>

                    <button type="submit" class="submit-btn" id="submitBtn" disabled>
                        ZAREZERWUJ TERMIN
                    </button>
                </form>

                <!-- Przycisk eksportu rezerwacji -->
                <button type="button" class="submit-btn" id="exportBtn" style="margin-top: 10px; background: #64748b;">
                    EKSPORTUJ REZERWACJE (CSV)
                </button>
            </div>
        </div>
    </main>

    <footer class="contact-footer">
        <div class="contact-container">
            <h2 class="contact-title">Skontaktuj się ze mną</h2>
            <div class="copyright">
                © 2024 PerłaDetailing. Wszelkie prawa zastrzeżone.
            </div>
        </div>
    </footer>

    <script>
        class BookingSystem {
            constructor() {
                this.currentDate = new Date();
                this.selectedDate = null;
                this.selectedTime = null;
                this.availableSlots = {};
                this.storageKey = 'perladetailing_bookings';
                
                this.initializeSystem();
            }

            async initializeSystem() {
                await this.loadBookings();
                this.initializeCalendar();
                this.initializeEventListeners();
            }

            async loadBookings() {
                try {
                    // Inicjalizuj wszystkie sloty
                    this.initializeAllSlots();
                    
                    // Załaduj rezerwacje z localStorage
                    const bookings = JSON.parse(localStorage.getItem(this.storageKey) || '[]');
                    console.log('Załadowane rezerwacje z localStorage:', bookings);
                    
                    // Blokowanie zajętych terminów
                    bookings.forEach(booking => {
                        const date = booking.data;
                        const time = booking.godzina;
                        
                        if (this.availableSlots[date]) {
                            const index = this.availableSlots[date].indexOf(time);
                            if (index > -1) {
                                this.availableSlots[date].splice(index, 1);
                            }
                        }
                    });
                    
                } catch (error) {
                    console.error('Błąd ładowania rezerwacji:', error);
                    this.initializeAllSlots();
                }
            }

            initializeAllSlots() {
                const today = new Date();
                this.availableSlots = {};
                
                for (let i = 0; i < 60; i++) {
                    const date = new Date(today);
                    date.setDate(today.getDate() + i);
                    
                    // Pomijanie weekendów (0 = niedziela, 6 = sobota)
                    const dayOfWeek = date.getDay();
                    if (dayOfWeek === 0 || dayOfWeek === 6) continue;
                    
                    const dateString = date.toISOString().split('T')[0];
                    
                    const availableTimes = [];
                    for (let hour = 8; hour <= 16; hour++) {
                        availableTimes.push(`${hour}:00`);
                    }
                    
                    this.availableSlots[dateString] = availableTimes;
                }
            }

            initializeCalendar() {
                this.renderCalendar();
                this.renderTimeSlots();
            }

            initializeEventListeners() {
                document.getElementById('prevMonth').addEventListener('click', () => {
                    this.currentDate.setMonth(this.currentDate.getMonth() - 1);
                    this.renderCalendar();
                });

                document.getElementById('nextMonth').addEventListener('click', () => {
                    this.currentDate.setMonth(this.currentDate.getMonth() + 1);
                    this.renderCalendar();
                });

                document.getElementById('bookingForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.submitBooking();
                });

                document.getElementById('exportBtn').addEventListener('click', () => {
                    this.exportBookings();
                });

                const formInputs = document.querySelectorAll('#bookingForm input, #bookingForm select, #bookingForm textarea');
                formInputs.forEach(input => {
                    input.addEventListener('input', () => this.validateForm());
                    input.addEventListener('change', () => this.validateForm());
                });

                // Event listener dla checkboxa prania tapicerki
                document.getElementById('fabricCleaning').addEventListener('change', () => {
                    this.validateForm();
                });
            }

            renderCalendar() {
                const calendarGrid = document.getElementById('calendarGrid');
                const currentMonthElement = document.getElementById('currentMonth');
                
                const monthNames = ['Styczeń', 'Luty', 'Marzec', 'Kwiecień', 'Maj', 'Czerwiec',
                                   'Lipiec', 'Sierpień', 'Wrzesień', 'Październik', 'Listopad', 'Grudzień'];
                currentMonthElement.textContent = `${monthNames[this.currentDate.getMonth()]} ${this.currentDate.getFullYear()}`;
                
                const dayNames = ['Pn', 'Wt', 'Śr', 'Cz', 'Pt', 'So', 'Nd'];
                let calendarHTML = '';
                
                dayNames.forEach(day => {
                    calendarHTML += `<div class="calendar-day-header">${day}</div>`;
                });
                
                const firstDay = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth(), 1);
                const lastDay = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth() + 1, 0);
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                
                for (let i = 0; i < (firstDay.getDay() + 6) % 7; i++) {
                    calendarHTML += `<div class="calendar-day"></div>`;
                }
                
                for (let day = 1; day <= lastDay.getDate(); day++) {
                    const date = new Date(this.currentDate.getFullYear(), this.currentDate.getMonth(), day);
                    const dateString = date.toISOString().split('T')[0];
                    const isPast = date < today;
                    const isAvailable = this.availableSlots[dateString] && this.availableSlots[dateString].length > 0;
                    const isSelected = this.selectedDate === dateString;
                    
                    let dayClass = 'calendar-day';
                    if (isSelected) dayClass += ' selected';
                    else if (isAvailable) dayClass += ' available';
                    else if (isPast) dayClass += ' past';
                    else dayClass += ' unavailable';
                    
                    calendarHTML += `
                        <div class="${dayClass}" data-date="${dateString}">
                            ${day}
                        </div>
                    `;
                }
                
                calendarGrid.innerHTML = calendarHTML;
                
                document.querySelectorAll('.calendar-day.available').forEach(day => {
                    day.addEventListener('click', () => {
                        this.selectDate(day.dataset.date);
                    });
                });
            }

            renderTimeSlots() {
                const timeSlotsElement = document.getElementById('timeSlots');
                
                if (!this.selectedDate) {
                    timeSlotsElement.innerHTML = '<div style="grid-column: 1 / -1; text-align: center; color: #94a3b8;">Wybierz datę, aby zobaczyć dostępne godziny</div>';
                    return;
                }
                
                const availableTimes = this.availableSlots[this.selectedDate] || [];
                let timeSlotsHTML = '';
                
                if (availableTimes.length === 0) {
                    timeSlotsHTML = '<div style="grid-column: 1 / -1; text-align: center; color: #94a3b8;">Brak dostępnych terminów w wybranym dniu</div>';
                } else {
                    availableTimes.forEach(time => {
                        const isSelected = this.selectedTime === time;
                        const timeClass = `time-slot ${isSelected ? 'selected' : ''}`;
                        
                        timeSlotsHTML += `
                            <div class="${timeClass}" data-time="${time}">
                                ${time}
                            </div>
                        `;
                    });
                }
                
                timeSlotsElement.innerHTML = timeSlotsHTML;
                
                document.querySelectorAll('.time-slot').forEach(slot => {
                    slot.addEventListener('click', () => {
                        this.selectTime(slot.dataset.time);
                    });
                });

                this.validateForm();
            }

            selectDate(date) {
                this.selectedDate = date;
                this.selectedTime = null;
                
                document.getElementById('selectedDate').value = this.formatDate(date);
                document.getElementById('selectedTime').value = '';
                
                this.renderCalendar();
                this.renderTimeSlots();
            }

            selectTime(time) {
                this.selectedTime = time;
                document.getElementById('selectedTime').value = time;
                this.renderTimeSlots();
            }

            formatDate(dateString) {
                const date = new Date(dateString);
                return date.toLocaleDateString('pl-PL', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }

            validateForm() {
                const name = document.getElementById('name').value.trim();
                const phone = document.getElementById('phone').value.trim();
                const carModel = document.getElementById('carModel').value.trim();
                const serviceType = document.getElementById('serviceType').value;
                
                // Walidacja telefonu (min. 9 cyfr)
                const phoneRegex = /^[0-9+\-\s()]{9,}$/;
                const isPhoneValid = phoneRegex.test(phone.replace(/\s/g, ''));
                
                // Walidacja email (jeśli podany)
                const email = document.getElementById('email').value.trim();
                let isEmailValid = true;
                if (email) {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    isEmailValid = emailRegex.test(email);
                }
                
                const isFormValid = name !== '' && 
                                   isPhoneValid && 
                                   isEmailValid &&
                                   carModel !== '' && 
                                   serviceType !== '' && 
                                   this.selectedDate && 
                                   this.selectedTime;
                
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = !isFormValid;
            }

            async submitBooking() {
                const formData = {
                    imie: document.getElementById('name').value,
                    telefon: document.getElementById('phone').value,
                    email: document.getElementById('email').value,
                    samochod: document.getElementById('carModel').value,
                    usluga: document.getElementById('serviceType').value,
                    pranie_tapicerki: document.getElementById('fabricCleaning').checked ? 'TAK' : 'NIE',
                    data: this.selectedDate,
                    godzina: this.selectedTime,
                    uwagi: document.getElementById('notes').value,
                    timestamp: new Date().toISOString()
                };

                const submitBtn = document.getElementById('submitBtn');
                submitBtn.disabled = true;
                submitBtn.textContent = 'WYSYŁANIE...';
                document.body.classList.add('loading');

                try {
                    console.log('Wysyłanie danych:', formData);
                    
                    // Zapisz w localStorage
                    const existingBookings = JSON.parse(localStorage.getItem(this.storageKey) || '[]');
                    existingBookings.push(formData);
                    localStorage.setItem(this.storageKey, JSON.stringify(existingBookings));

                    // Zablokuj termin lokalnie
                    const index = this.availableSlots[this.selectedDate].indexOf(this.selectedTime);
                    if (index > -1) {
                        this.availableSlots[this.selectedDate].splice(index, 1);
                    }
                    
                    alert('✅ Rezerwacja została zapisana! Skontaktujemy się w celu potwierdzenia terminu.\n\nUWAGA: Ta rezerwacja jest zapisana tylko w tej przeglądarce. Aby ją utrwalić, wyeksportuj rezerwacje i wyślij do właściciela.');
                    this.resetForm();

                } catch (error) {
                    console.error('Błąd podczas wysyłania rezerwacji:', error);
                    this.showManualBookingOption(formData);
                } finally {
                    submitBtn.textContent = 'ZAREZERWUJ TERMIN';
                    document.body.classList.remove('loading');
                    this.validateForm();
                }
            }

            showManualBookingOption(formData) {
                const manualData = `
IMIĘ I NAZWISKO: ${formData.imie}
TELEFON: ${formData.telefon}
EMAIL: ${formData.email}
SAMOCHÓD: ${formData.samochod}
USŁUGA: ${formData.usluga}
PRANIE TAPICERKI: ${formData.pranie_tapicerki}
DATA: ${this.formatDate(formData.data)}
GODZINA: ${formData.godzina}
UWAGI: ${formData.uwagi}
                `.trim();

                const message = `❌ Nie udało się zapisać rezerwacji automatycznie.\n\nSkopiuj poniższe dane i wyślij je SMS-em lub WhatsAppem:\n\n${manualData}\n\nTelefon: +48 123 456 789`;
                
                if (confirm(message + '\n\nKliknij OK aby skopiować dane do schowka.')) {
                    // Skopiuj do schowka
                    navigator.clipboard.writeText(manualData).then(() => {
                        alert('Dane skopiowane do schowka!');
                    }).catch(() => {
                        // Fallback dla przeglądarek bez wsparcia clipboard
                        const textArea = document.createElement('textarea');
                        textArea.value = manualData;
                        document.body.appendChild(textArea);
                        textArea.select();
                        document.execCommand('copy');
                        document.body.removeChild(textArea);
                        alert('Dane skopiowane do schowka!');
                    });
                }
            }

            exportBookings() {
                const bookings = JSON.parse(localStorage.getItem(this.storageKey) || '[]');
                if (bookings.length === 0) {
                    alert('Brak zapisanych rezerwacji.');
                    return;
                }

                // Nagłówki CSV
                const headers = ['Imię', 'Telefon', 'Email', 'Samochód', 'Usługa', 'Pranie tapicerki', 'Data', 'Godzina', 'Uwagi', 'Timestamp'];
                
                // Konwersja do CSV
                const csvContent = [
                    headers.join(','),
                    ...bookings.map(booking => [
                        `"${booking.imie}"`,
                        `"${booking.telefon}"`,
                        `"${booking.email}"`,
                        `"${booking.samochod}"`,
                        `"${booking.usluga}"`,
                        `"${booking.pranie_tapicerki}"`,
                        `"${booking.data}"`,
                        `"${booking.godzina}"`,
                        `"${booking.uwagi}"`,
                        `"${booking.timestamp}"`
                    ].join(','))
                ].join('\n');

                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const url = URL.createObjectURL(blob);
                const link = document.createElement("a");
                link.setAttribute("href", url);
                link.setAttribute("download", `rezerwacje_perladetailing_${new Date().toISOString().split('T')[0]}.csv`);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }

            resetForm() {
                document.getElementById('bookingForm').reset();
                this.selectedDate = null;
                this.selectedTime = null;
                document.getElementById('selectedDate').value = '';
                document.getElementById('selectedTime').value = '';
                this.renderCalendar();
                this.renderTimeSlots();
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            window.bookingSystem = new BookingSystem();
        });
    </script>
</body>
</html>
