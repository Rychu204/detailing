    <script>
       class BookingSystem {
    constructor() {
        this.currentDate = new Date();
        this.selectedDate = null;
        this.selectedTime = null;
        this.availableSlots = {};
        
        // SPRÓBUJ BEZPOŚREDNIO BEZ PROXY
        this.googleSheetsURL = 'https://script.google.com/macros/s/AKfycbzl8Ul_Xz5-3SLQVCsWOnaADwxc7nzF6MzXOUsgWSyEpQ5bRX4A2Q_rhSemB9-tR-pk/exec';
        
        this.initializeSystem();
    }

    async submitBooking() {
        const formData = {
            imie: document.getElementById('name').value,
            telefon: document.getElementById('phone').value,
            email: document.getElementById('email').value,
            samochod: document.getElementById('carModel').value,
            usluga: document.getElementById('serviceType').value,
            pranie_tapicerki: document.getElementById('fabricCleaning').checked ? 'TAK' : 'NIE',
            data: this.selectedDate,
            godzina: this.selectedTime,
            uwagi: document.getElementById('notes').value,
            timestamp: new Date().toISOString()
        };

        const submitBtn = document.getElementById('submitBtn');
        submitBtn.disabled = true;
        submitBtn.textContent = 'WYSYŁANIE...';
        document.body.classList.add('loading');

        try {
            console.log('Wysyłanie danych:', formData);
            
            // Próba 1: Bezpośrednie wysłanie
            let response = await fetch(this.googleSheetsURL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            });

            // Jeśli bezpośrednie żądanie zawiedzie z powodu CORS, spróbuj z proxy
            if (!response.ok) {
                console.log('Bezpośrednie żądanie nie powiodło się, próba z proxy...');
                
                const proxyUrl = 'https://api.allorigins.win/raw?url=' + encodeURIComponent(this.googleSheetsURL);
                response = await fetch(proxyUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
            }

            console.log('Odpowiedź serwera:', response);

            if (response.ok) {
                const result = await response.json();
                console.log('Wynik:', result);
                
                if (result.status === 'success') {
                    const index = this.availableSlots[this.selectedDate].indexOf(this.selectedTime);
                    if (index > -1) {
                        this.availableSlots[this.selectedDate].splice(index, 1);
                    }
                    
                    alert('✅ Rezerwacja została wysłana! Skontaktujemy się w celu potwierdzenia terminu.');
                    this.resetForm();
                } else {
                    throw new Error(result.message || 'Nieznany błąd serwera');
                }
            } else {
                throw new Error(`Błąd HTTP: ${response.status}`);
            }
        } catch (error) {
            console.error('Błąd podczas wysyłania rezerwacji:', error);
            this.showManualBookingOption(formData);
        } finally {
            submitBtn.textContent = 'ZAREZERWUJ TERMIN';
            document.body.classList.remove('loading');
            this.validateForm();
        }
    }

    // ... reszta kodu pozostaje bez zmian
}
